nextflow_process {

    name "Test Process FINALISE_OUTPUT"
    script "../main.nf"
    process "FINALISE_OUTPUT"

    test("Output files preparation") {

        when {
            process {
                """
                input[0] = Channel.fromPath("${moduleDir}/tests/data/*links.tsv", checkIfExists: true).collect()
                input[1] = Channel.fromPath("${moduleDir}/tests/data/*not_linked.tsv", checkIfExists: true).collect()
                input[2] = file("${projectDir}/data/tests/all_catalog_metadata.tsv")
                input[3] = file("${projectDir}/data/tests/processed_accessions.tsv")
                input[4] = file("${projectDir}/data/tests/mag_to_assembly_links.tsv")
                """
            }
        }

        then {
            assert process.success
            assert path(process.out.mag_to_assembly_links.get(0)).md5 == "083454f116f953fd5569a253c168aaf7"
            assert path(process.out.processed_accessions.get(0)).md5 == "6a007e373a51fb05ed4dfdcdf8bd9e85"
        }

    }

}
