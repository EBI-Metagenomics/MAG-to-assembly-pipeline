executor {
    name              = "slurm"
    queueSize         = 200
    queueGlobalStatus = true
    submitRateLimit   = "10 sec"
    pollInterval      = "10 sec"

}

singularity {
    enabled           = true
    autoMounts        = true
    cacheDir          = "/hps/nobackup/rdf/metagenomics/service-team/singularity-cache/"
    pullTimeout       = "60 min"
}

process {
    cpus              = 1
    memory            = { check_max( 15.GB * task.attempt, 'memory' ) }
    time              = { check_max( 4.h  * task.attempt, 'time'   ) }
    errorStrategy     = { task.exitStatus == 137 || task.exitStatus == 140 ? 'retry' : 'finish' }
    maxRetries        = 2
}
